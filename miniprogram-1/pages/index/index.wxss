.bg{
  /* 背景 */
  left: 0px;
  top: 0px;
  width: 100%;
  height: 422px;
  background: linear-gradient(180deg, #FFEFE0 1%, rgba(255,229,229,0.00) 100%);
  position: relative;
}

.title{
  position: absolute;
  left: 50%;
  top: 15px;
